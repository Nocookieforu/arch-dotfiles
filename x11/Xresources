! #########################################
urxvt*cursorUnderline:  1
urxvt*letterSpace:      -1
urxvt*fading: 			10
urxvt*fadeColor: 		#000000	
urxvt*cursorBlink:		true
urxvt*scrollBar:		false
urxvt*depth:			32 
urxvt*internalBorder: 	10
urxvt*dynamicColors:    on
urxvt.urgentOnBell:     true

urxvt*perl-lib:			/usr/lib/urxvt/perl
urxvt*perl-ext-common:	default,matcher,selection-to-clipboard,clipboard,font-size
urxvt*perl-matcher: 	1
urxvt*matcher-button: 	3
urxvt*url-launcher:		/usr/bin/firefox
URxvt*matcher.button:   1
URxvt*matcher.pattern.1: \\bwww\\.[\\w-]\\.[\\w./?&@#-]*[\\w/-]

! Font change settings
urxvt.iso14755:         false
urxvt.iso14755_52:      false
urxvt.keysym.C-equal:	perl:font-size:increase
urxvt.keysym.C-minus:   perl:font-size:decrease

# Paste ability
urxvt.keysym.Shift-Control-V:   perl:clipboard:paste

Xft.antialias:          1
Xft.autohint:           0
Xft.dpi:                96
Xft.hinting:            1
Xft.hintstyle:          hintfull
Xft.lcdfilter:          lcddefault
Xft.rgba:               rgb

! Inconsolata
urxvt*letterSpace:      -2
urxvt*font:             xft:inconsolata:size=12
urxvt*boldFont:         xft:inconsolata:bold:size=12
urxvt*italicFont:       xft:inconsolata:italic:size=12

! Deja Vu Sans
!urxvt*font:             xft:dejavu sans mono:size=10
!urxvt*boldFont:         xft:dejavu sans mono:bold:size=10
!urxvt*italicFont:       xft:dejavu sans mono:italic:size=10

